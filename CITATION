citation <- bibentry(
  bibtype = "Manual",
  title = "SternBrocot: Approximation of Real Numbers as Rational Fractions Using the Stern-Brocot Tree",
  author = person("Brian McAuliff", "Mulloy"),
  year = "2025",
  note = "R package version 1.0.0",
  url = "https://github.com/homeymusic/SternBrocotR"
)

